<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- New Design -->
	<LinearLayout    	
    	android:padding="10dip"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
    	android:visibility="visible"
    	android:orientation="vertical"
    	android:background="@android:color/transparent">
	    
	    <TableRow 
	        android:id="@+id/mainFragmentTwo_tr_rowOne"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:visibility="visible">	        
	        
	        <RelativeLayout 
	            android:id="@+id/mainFragmentTwo_rl_hobby"
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_margin="10dip"
	            android:background="@drawable/bg_fragment">
	            
	            <ImageView 
	                android:id="@+id/mainFragmentTwo_iv_hobby"
	                android:layout_width="60dip"
	                android:layout_height="60dip"
	                android:layout_marginTop="40dip"
	                android:layout_centerHorizontal="true"
	                android:src="@drawable/hobby_icon"/>
	            
	            <TextView 
	                android:id="@+id/mainFragmentTwo_tv_hobby"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="5dip"
	                android:padding="2dip"
	                android:layout_below="@+id/mainFragmentTwo_iv_hobby"
	                android:gravity="center"
	                android:text="@string/hobby_list_classes_name"
	                android:textColor="@color/white"
	                android:textSize="17sp"
	                android:textStyle="bold"/>
	            
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/mainFragmentTwo_rl_workshop"
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_margin="10dip"
	            android:background="@drawable/bg_fragment">
	            
	            <ImageView 
	                android:id="@+id/mainFragmentTwo_iv_workshop"
	                android:layout_width="60dip"
	                android:layout_height="60dip"
	                android:layout_marginTop="40dip"
	                android:layout_centerHorizontal="true"
	                android:src="@drawable/workshop_icon"/>
	            
	            <TextView 
	                android:id="@+id/mainFragmentTwo_tv_workshop"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="5dip"
	                android:padding="2dip"
	                android:layout_below="@+id/mainFragmentTwo_iv_workshop"
	                android:gravity="center"
	                android:text="@string/workshop_list_classes_name"
	                android:textColor="@color/white"
	                android:textSize="17sp"
	                android:textStyle="bold"/>
	            
	        </RelativeLayout>
	        
	    </TableRow>
	    
	    <TableRow 
	        android:id="@+id/mainFragmentTwo_tr_rowTwo"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:visibility="visible">
	        
	        <RelativeLayout 
	            android:id="@+id/mainFragmentTwo_rl_career"
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_margin="10dip"
	            android:background="@drawable/bg_fragment">
	            
	            <ImageView 
	                android:id="@+id/mainFragmentTwo_iv_career"
	                android:layout_width="60dip"
	                android:layout_height="60dip"
	                android:layout_marginTop="40dip"
	                android:layout_centerHorizontal="true"
	                android:src="@drawable/career_icon"/>
	            
	            <TextView 
	                android:id="@+id/mainFragmentTwo_tv_career"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="5dip"
	                android:padding="2dip"
	                android:layout_below="@+id/mainFragmentTwo_iv_career"
	                android:gravity="center"
	                android:text="@string/carrer_list_classes_name"
	                android:textColor="@color/white"
	                android:textSize="17sp"
	                android:textStyle="bold"/>
	            
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/mainFragmentTwo_rl_professional"
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_margin="10dip"
	            android:background="@drawable/bg_fragment">
	            
	            <ImageView 
	                android:id="@+id/mainFragmentTwo_iv_professional"
	                android:layout_width="60dip"
	                android:layout_height="60dip"
	                android:layout_marginTop="40dip"
	                android:layout_centerHorizontal="true"
	                android:src="@drawable/professional_icon"/>
	            
	            <TextView 
	                android:id="@+id/mainFragmentTwo_tv_professional"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="5dip"
	                android:padding="2dip"
	                android:layout_below="@+id/mainFragmentTwo_iv_professional"
	                android:gravity="center"
	                android:text="@string/professional_list_classes_name"
	                android:textColor="@color/white"
	                android:textSize="17sp"
	                android:textStyle="bold"/>
	            
	        </RelativeLayout>
	        
	    </TableRow>
	    
	</LinearLayout>
	<!-- End New Design -->

</LinearLayout>
