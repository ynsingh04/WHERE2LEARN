<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="${relativePackage}.${activityClass}" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/signup_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginStart="0dip"
                android:contentDescription="@string/app_name"
                android:padding="10dip"
                android:src="@drawable/school_list_arrow_filters" />

            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/login_top_stripe"></RelativeLayout>
                        
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo_splash" />

            <!-- <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:layout_margin="5dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/app_name_with_shadow"
                android:visibility="gone" /> -->

            <!-- LinearLayout layout -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="15dip"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="15dip" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_proffessional_img"
                    android:visibility="gone" />

                <!-- <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/login_sign_up"
                    android:visibility="gone" /> -->
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:layout_marginBottom="10dip"
                    android:gravity="center"
                    android:text="Sign up"
                    android:textSize="35sp"
                    android:textColor="@color/white"/>
                
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip">
                    <EditText
                    android:id="@+id/activity_sign_up_nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:drawableLeft="@drawable/signup_name_big"
                    android:drawablePadding="10dip"
                    android:drawableStart="@drawable/signup_name_big"
                    android:hint="@string/sign_up_name"
                    android:textColorHint="@color/white"
                    android:inputType="textPersonName"
                    android:padding="5dip"
                    android:textSize="25sp" />
                </RelativeLayout>
                
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip">
                    <EditText
                    android:id="@+id/activity_sign_up_emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:drawableLeft="@drawable/login_mail_big"
                    android:drawablePadding="10dip"
                    android:drawableStart="@drawable/login_mail_big"
                    android:hint="@string/login_email"
                    android:textColorHint="@color/white"
                    android:inputType="textEmailAddress"
                    android:padding="5dip"
                    android:textSize="25sp" />
                </RelativeLayout>

                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip">
                    <EditText
                    android:id="@+id/activity_sign_up_phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:drawableLeft="@drawable/signup_phone_big"
                    android:drawablePadding="10dip"
                    android:drawableStart="@drawable/signup_phone_big"
                    android:hint="@string/sign_up_phone"
                    android:textColorHint="@color/white"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dip"
                    android:textSize="25sp" />
                </RelativeLayout>

                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="15dip">
                    <EditText
                    android:id="@+id/activity_sign_up_passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:drawableLeft="@drawable/login_password_big"
                    android:drawablePadding="10dip"
                    android:drawableStart="@drawable/login_password_big"
                    android:hint="@string/login_password"
                    android:textColorHint="@color/white"
                    android:inputType="textPassword"
                    android:padding="5dip"
                    android:textSize="25sp" />
                </RelativeLayout>
                
                <TextView 
                    android:id="@+id/signUp_tv_passwordHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text=""
                    android:textColor="@color/white"/>

                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip">
                    <EditText
                    android:id="@+id/activity_sign_up_confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:drawableLeft="@drawable/login_confirm_password_big"
                    android:drawablePadding="10dip"
                    android:drawableStart="@drawable/login_confirm_password_big"
                    android:hint="@string/login_confirm_password"
                    android:textColorHint="@color/white"
                    android:inputType="textPassword"
                    android:padding="5dip"
                    android:textSize="25sp" />
                </RelativeLayout>

                                

                <!-- Sign Up -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/list_availabe_line"
                    android:contentDescription="@string/app_name"
                    android:padding="5dip"
                    android:visibility="gone" />

                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip">
                    <TextView
                    android:id="@+id/activity_sign_up_okTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:drawablePadding="5dip"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/sign_up_create_account"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:background="@drawable/sign_up_box_big_large" />
                </RelativeLayout>
                
            </LinearLayout>
            
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="20dip"
            android:paddingBottom="15dip"
            android:text="@string/login_listers"
            android:textColor="@color/white"
            android:textSize="16sp"/>

            <!-- End LinearLayout layout -->

        </LinearLayout>
        
    </ScrollView>

