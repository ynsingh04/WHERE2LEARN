    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/workshopTitleBarRelativeLayout"
        android:paddingBottom="5dip"
        android:background="@drawable/bg_blur_watermark_normal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="5dip" >

            <!-- Description -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school_details_brief_description"
                    android:textColor="@color/lightsteelblue" />

                <TextView
                    android:id="@+id/activity_workshop_details_descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <!-- faculties available -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/school_details_line"
                    android:text="@string/school_details_info"
                    android:textColor="@color/lightsteelblue" />

                <TextView
                    android:id="@+id/activity_workshop_details_facilities_availableTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
 

            
            <!-- Contact details -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/school_details_line"
                    android:text="@string/school_details_contact_details"
                    android:textColor="@color/lightsteelblue"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school_details_address"
                    android:textColor="@color/lightsteelblue" />

                <TextView
                    android:id="@+id/activity_workshop_details_addressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school_details_phone"
                    android:textColor="@color/lightsteelblue" />

                <TextView
                    android:id="@+id/activity_workshop_details_mobilenumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/client_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/activity_workshop_details_mobilenumberTwoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/client_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                
                <!-- external link -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school_details_external_link"
                    android:textColor="@color/lightsteelblue" />

                <TextView
                    android:id="@+id/activity_workshop_details_external_link1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/client_cyan"
                    android:textSize="16sp" />
                
                <TextView
                    android:id="@+id/activity_workshop_details_external_link2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/client_cyan"
                    android:textSize="16sp" />
            </LinearLayout>
            
            </LinearLayout>

            <!-- user rating -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/school_details_line"
                    android:text="@string/school_details_user_rating"
                    android:textColor="@color/lightsteelblue" />

                <RatingBar
                    android:id="@+id/activity_workshop_details_ratingRatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="0" />
            </LinearLayout>

            <!-- Profile photos -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/school_details_line"
                    android:text="@string/school_details_more_photos"
                    android:textColor="@color/lightsteelblue" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/activity_workshop_details_image1ImageView"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/school_details_photo"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/activity_workshop_details_image2ImageView"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/school_details_photo"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/activity_workshop_details_image3ImageView"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/school_details_photo"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/activity_workshop_details_image4ImageView"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_margin="5dip"
                            android:background="@drawable/school_details_photo"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            

            <!-- end -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/activity_workshopProgressBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/activity_mainProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <!-- footer tag -->

    <include layout="@layout/footer" />

</RelativeLayout>