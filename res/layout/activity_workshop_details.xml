<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/workshopTitleBarRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@android:color/transparent" >
        
        <RelativeLayout
        android:id="@+id/workshopCoverImageRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:background="@android:color/transparent" >

        <ImageView
            android:id="@+id/activity_workshop_details_bannerImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_workshop_top"
            android:contentDescription="@string/app_name" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:alpha=".8"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_workshop_details_callTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:drawableTop="@drawable/school_details_call"
                    android:padding="5dip"
                    android:text="@string/school_details_call"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/activity_workshop_details_mapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:drawableTop="@drawable/school_details_map"
                    android:padding="5dip"
                    android:text="@string/school_details_map"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/activity_workshop_details_shareTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:drawableTop="@drawable/school_details_share"
                    android:padding="5dip"
                    android:text="@string/school_details_share"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/activity_workshop_details_ratingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:drawableTop="@drawable/school_details_rating"
                    android:padding="5dip"
                    android:text="@string/school_details_rating"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/activity_workshop_details_notifyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:drawableTop="@drawable/school_details_notify"
                    android:padding="5dip"
                    android:text="@string/school_details_notify"
                    android:textColor="@color/white" />
                
                <TextView
                    android:id="@+id/activity_workshop_details_displayImagesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:drawableTop="@drawable/school_details_gallery"
                    android:padding="5dip"
                    android:text="@string/school_details_display_images"
                    android:textColor="@color/white" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

        <LinearLayout
            android:id="@+id/workshopTitleBarLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@android:color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/workshop_detailsBackImageView"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:contentDescription="@string/app_name"
                android:padding="15dip"
                android:src="@drawable/school_list_arrow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_workshop_details_titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/activity_workshop_details_typeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

